{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "price": {
      "type": "decimal",
      "required": true
    },
    "coverImg": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "imgs": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "desc": {
      "type": "text",
      "required": true
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "Clothing",
        "Accessories",
        "Electronics",
        "Home",
        "Beauty",
        "Health",
        "Sports",
        "Toys"
      ],
      "required": true
    },
    "badge": {
      "type": "enumeration",
      "enum": [
        "none",
        "new",
        "best sales",
        "sale"
      ],
      "required": true,
      "default": "none"
    }
  }
}
